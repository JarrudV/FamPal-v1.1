    "express": "^5.2.1",
    "firebase": "^12.8.0",
    "firebase-admin": "^12.7.0",
    "firebase-tools": "^15.5.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^6.30.3",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^7.3.1"
