rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Data
    // Allow the owner to read/write their root user doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow the owner to read/write any subcollections under their user doc
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Groups (MVP: members can read/write)
    // Note: In a real app, you'd stricter rules checking 'members' array
    match /groups/{groupId} {
       allow read, write: if request.auth != null; 
    }
  }
}
